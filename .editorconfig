# EditorConfig configuration for V4-ports
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h,cpp,hpp,cc,cxx}]
indent_style = space
indent_size = 2
max_line_length = 90

[*.{cmake,txt}]
indent_style = space
indent_size = 2

[CMakeLists.txt]
indent_style = space
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

[*.{sh,bash}]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
